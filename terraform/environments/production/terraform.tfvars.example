# Production Environment Configuration
# Copy to terraform.tfvars and fill in actual values

# Environment Configuration
environment = "prod"
project_name = "ara-system"

# Vercel Configuration
vercel_team_id = "your_vercel_team_id_here"

# Database Configuration (PlanetScale)
planetscale_organization = "your_planetscale_org_name"

# Storage Configuration (Cloudflare)
cloudflare_account_id = "your_cloudflare_account_id"

# Redis Configuration (Upstash)
upstash_email = "your_upstash_email@example.com"

# Domain Configuration
production_domain = "ara-system.com"

# API Keys and Secrets (Set these as environment variables instead)
# export TF_VAR_vercel_api_token="..."
# export TF_VAR_cloudflare_api_token="..."
# export TF_VAR_upstash_api_key="..."
# export TF_VAR_planetscale_api_token="..."

