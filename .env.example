# Database
DATABASE_URL="postgresql://username:password@localhost:5432/ara_db"

# Redis Cache Configuration
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_USERNAME=""
REDIS_DB="0"
REDIS_URL="redis://localhost:6379"

# Cloudflare R2 Storage Configuration
CLOUDFLARE_R2_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"
CLOUDFLARE_R2_ACCESS_KEY_ID="your-r2-access-key-id"
CLOUDFLARE_R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
CLOUDFLARE_R2_BUCKET="ara-pdf-reports"
CLOUDFLARE_R2_REGION="auto"

# Performance Monitoring
ADMIN_API_KEY="your-admin-api-key-for-monitoring"

# Optional: Email Configuration (for notifications)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="noreply@example.com"
SMTP_PASS="your-smtp-password"

# Performance Settings
NODE_ENV="development"
ENABLE_PERFORMANCE_MONITORING="true"
CACHE_ENABLED="true"

# Security Configuration - Task 3.2
PII_ENCRYPTION_KEY="your-32-character-minimum-encryption-key-here"
CSRF_SECRET="your-csrf-secret-key-for-token-generation"

# Security Features
ENABLE_RATE_LIMITING="true"
ENABLE_CSRF_PROTECTION="true"
ENABLE_SECURITY_HEADERS="true"
ENABLE_INPUT_VALIDATION="true"