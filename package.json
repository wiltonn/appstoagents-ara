{
  "name": "appstoagents-ara",
  "type": "module",
  "version": "0.1.0",
  "description": "Agent Readiness Audit - A wizard-first web application with embedded mini-chat",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "start": "npm run preview",
    "astro": "astro",
    "check": "astro check",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:test:setup": "cross-env NODE_ENV=test prisma migrate dev",
    "db:reset": "prisma migrate reset",
    
    "cleanup:guests": "tsx src/scripts/cleanup-guest-sessions.ts",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/client",
    "bundle-stats": "rollup-plugin-visualizer",
    
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    
    "test:unit": "vitest run --config vitest.config.ts src/test/unit/",
    "test:integration": "vitest run --config vitest.config.ts src/test/integration/",
    "test:coverage": "vitest run --coverage",
    "test:coverage:combined": "vitest run --coverage --reporter=lcov --reporter=text",
    
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    
    "test:performance": "playwright test src/test/performance/",
    "test:benchmark": "playwright test src/test/performance/benchmark.test.ts",
    "test:load": "playwright test src/test/performance/load-testing.test.ts",
    
    "test:smoke": "playwright test --grep @smoke",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    
    "audit:security": "npm audit --audit-level moderate"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/react": "^4.3.0",
    "@astrojs/tailwind": "^6.0.2",
    "@astrojs/vercel": "^7.8.2",
    "@clerk/astro": "^2.10.8",
    "@clerk/clerk-js": "^5.74.1",
    "@clerk/types": "^4.68.0",
    "@prisma/client": "^6.12.0",
    "@tanstack/react-query": "^4.40.1",
    "@trpc/client": "^10.45.2",
    "@trpc/react-query": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "astro": "^4.16.0",
    "daisyui": "^4.12.10",
    "openai": "^4.75.1",
    "puppeteer": "^23.10.4",
    "bull": "^4.16.3",
    "ioredis": "^5.4.2",
    "@aws-sdk/client-s3": "^3.693.0",
    "@aws-sdk/s3-request-presigner": "^3.693.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "superjson": "^2.2.2",
    "svix": "^1.69.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "ws": "^8.18.0",
    "zod": "^3.23.8",
    "zustand": "^4.5.7",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.52.1",
    "@opentelemetry/resources": "^1.25.1",
    "@opentelemetry/semantic-conventions": "^1.25.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.52.1",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.52.1",
    "@opentelemetry/auto-instrumentations-node": "^0.47.1",
    "@opentelemetry/instrumentation-http": "^0.52.1",
    "@prisma/instrumentation": "^5.7.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.17.6",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/ws": "^8.5.13",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "codecov": "^3.8.3",
    "cross-env": "^7.0.3",
    "eslint-plugin-playwright": "^0.20.0",
    "happy-dom": "^15.10.2",
    "license-checker": "^25.0.1",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.13.0",
    "prisma": "^6.12.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "terser": "^5.36.0",
    "tsx": "^4.7.1",
    "vite-bundle-analyzer": "^0.18.0",
    "vitest": "^1.1.0",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
